<div class="max-w-5">
  <div class="card">
    <div class="card-content p-12">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Your name..." />
        </div>
      </div>

      <div class="field">
        <label class="label">Username</label>
        <div class="control has-icon">
          <input
            class="input is-success"
            type="text"
            placeholder="Your username..."
            value="johndoe"
          />
          <div class="form-icon">
            <i class="iconify" data-icon="lucide:user"></i>
          </div>
        </div>
        <p class="help is-success">This username is available</p>
      </div>

      <div class="field">
        <label class="label">Email</label>
        <div class="control has-icon">
          <input
            class="input is-danger"
            type="email"
            placeholder="Email input"
            value="hello@"
          />
          <div class="form-icon">
            <i class="iconify" data-icon="lucide:mail"></i>
          </div>
        </div>
        <p class="help is-danger">This email is invalid</p>
      </div>

      <div class="field">
        <label class="label">Subject</label>
        <div class="control has-icon">
          <div class="select is-fullwidth">
            <select>
              <option>Select a topic</option>
              <option>Personal</option>
              <option>Business</option>
              <option>Family</option>
              <option>Casual</option>
            </select>
            <div class="form-icon">
              <i class="iconify" data-icon="lucide:feather"></i>
            </div>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Message</label>
        <div class="control">
          <textarea class="textarea" placeholder="Write your message..."
          ></textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <!-- Checkbox -->
          <label for="checkbox-form-vertical" class="checkbox is-curve">
            <input id="checkbox-form-vertical" type="checkbox" />
            <span class="checkbox-inner">
              <span class="checkbox-wrap">
                <span class="checkbox-box">
                  <svg width="32" height="32" viewBox="0 0 24 24">
                    <path
                      fill="none"
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M20 6L9 17l-5-5"></path>
                  </svg>
                </span>
              </span>
              <span class="checkbox-label"
                >I agree to the
                <a href="#" class="default-link">terms and conditions</a>
              </span>
            </span>
          </label>
        </div>
      </div>

      <div class="field mt-5">
        <div class="control">
          <div class="buttons is-right">
            <button class="button is-long-1">Cancel</button>
            <button class="button is-primary is-long-1 raised">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
