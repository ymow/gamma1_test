<div class="max-w-4" x-data="initDatepickers()">
  <div class="columns">
    <div class="column is-6">
      <div class="field">
        <div class="control has-icon">
          <input
            class="input datepicker-start"
            type="text"
            placeholder="Start date"
          />
          <span class="form-icon">
            <i class="iconify" data-icon="lucide:calendar"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="column is-6">
      <div class="field">
        <div class="control has-icon">
          <input
            class="input datepicker-end"
            type="text"
            placeholder="End date"
          />
          <span class="form-icon">
            <i class="iconify" data-icon="lucide:calendar"></i>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
