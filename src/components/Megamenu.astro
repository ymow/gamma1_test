<div
  class="megamenu"
  x-bind:class="{
    'is-active': megamenuOpened,
    '': !megamenuOpened,
  }"
>
  <!--Megamenu 1-->
  <div x-show="openedMegamenu === 'megamenu-1'" class="megamenu-inner">
    <button class="close-button" x-on:click="megamenuOpened = !megamenuOpened">
      <i class="iconify" data-icon="lucide:arrow-left"></i>
    </button>
    <div class="container">
      <div class="columns">
        <div class="column is-4">
          <div class="megamenu-block">
            <div class="media">
              <div class="media-left text-primary">
                <i class="iconify" data-icon="ph:grid-four-duotone"></i>
              </div>
              <div class="media-content">
                <h3 class="text-rainbow">Elements</h3>
                <p>
                  Minimal ships with prebuilt and reusable elements that you can
                  assemble to build your webpages
                </p>
                <a class="action-link" href="/elements">
                  <span>Explore all elements</span>
                  <i class="iconify" data-icon="lucide:arrow-right"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="column is-2">
          <div class="megamenu-block has-margin">
            <h4 class="text-rainbow">Categories</h4>
            <ul>
              <li>
                <a
                  href="/elements#button-element"
                  class="slide-link is-default"
                >
                  <span>Button</span>
                </a>
              </li>
              <li>
                <a
                  href="/elements#dropdown-element"
                  class="slide-link is-default"
                >
                  <span>Dropdown</span>
                </a>
              </li>
              <li>
                <a
                  href="/elements#avatar-element"
                  class="slide-link is-default"
                >
                  <span>Avatar</span>
                </a>
              </li>
              <li>
                <a href="/table" class="slide-link is-default">
                  <span>Table</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="column is-6">
          <div class="megamenu-block">
            <div class="showcase">
              <a href="/elements#modal-element" class="showcase-item">
                <img src="/img/photo/ui/1.png" alt="showcase photo" />
                <div class="showcase-content">
                  <div>
                    <h5 class="title is-6 is-narrow">Modal dialog</h5>
                    <p>Javascript included</p>
                  </div>
                  <i class="iconify" data-icon="ph:selection-duotone"></i>
                </div>
              </a>
              <a href="/table" class="showcase-item">
                <img src="/img/photo/ui/2.png" alt="showcase photo" />
                <div class="showcase-content">
                  <div>
                    <h5 class="title is-6 is-narrow">HTML Table</h5>
                    <p>Table layout variations</p>
                  </div>
                  <i class="iconify" data-icon="ph:layout-duotone"></i>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--Megamenu 2-->
  <div x-show="openedMegamenu === 'megamenu-2'" class="megamenu-inner">
    <button class="close-button" x-on:click="megamenuOpened = !megamenuOpened">
      <i class="iconify" data-icon="lucide:arrow-left"></i>
