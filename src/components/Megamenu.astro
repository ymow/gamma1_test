              <a href="/content" class="showcase-item">
                <img src="/img/photo/ui/6.png" alt="showcase photo" />
                <div class="showcase-content">
                  <div>
                    <h5 class="title is-6 is-narrow">Content</h5>
                    <p>Prebuilt content sections</p>
                  </div>
                  <i class="iconify" data-icon="ph:circles-three-plus-duotone"
                  ></i>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
